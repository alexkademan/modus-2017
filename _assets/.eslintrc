{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {

  "indent": ["error", 2],
  # "no-return-assign": 0,
  # "comma-dangle": 0,
  "no-underscore-dangle": 0,
  "arrow-body-style": 0,
  "no-console": 0,
  "valid-typeof": 0,
  # "prefer-arrow-callback": 0,

  "valid-jsdoc": ["error", {
    "requireReturn": true,
    "requireReturnType": true,
    "requireParamDescription": true,
    "requireReturnDescription": true
  }],
  "require-jsdoc": ["error", {
      "require": {
          "FunctionDeclaration": false,
          "MethodDefinition": false,
          "ClassDeclaration": false
      }
    }]
  }
}
